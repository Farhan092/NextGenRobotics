@model NextGenRobotics.Models.User

@{
    ViewBag.Title = "User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your layout file path
}

<div class="container">
    <div class="row">
        <div class="col-md-4 text-center">
            <!-- Profile Image -->
            <img src="@Url.Content(Model.ImageUrl)" alt="Profile Picture" class="img-fluid rounded-circle" style="max-width: 200px; max-height: 200px;">
            <h2 class="mt-3">@Model.Name</h2>
            <p class="text-muted">Username: @Model.UserName</p>
        </div>
        <div class="col-md-8">
            <h3 class="mb-4">Profile Details</h3>
            <table class="table table-striped">
                <tr>
                    <th>Email:</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>Phone Number:</th>
                    <td>@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <th>Address:</th>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <th>Role:</th>
                    <td>@Model.Role</td>
                </tr>
            </table>
        </div>
    </div>

    <!-- Edit Button and Back Link -->
    <div class="row mt-4">
        <div class="col-md-12 text-center">
            @Html.ActionLink("Edit Profile", "Edit", new { id = Model.UserId }, new { @class = "btn btn-primary" })
           
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 30px;
    }

    .table th {
        width: 30%;
        text-align: left;
    }

    .table td {
        text-align: left;
    }

    .img-fluid {
        border: 2px solid #ccc;
        padding: 10px;
        background-color: #f9f9f9;
    }

    h2 {
        font-size: 1.5em;
        color: #007bff;
    }
</style>
